    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp">

            <!--  giới thiệu Hồ Gươm  -->
            <LinearLayout
                android:id="@+id/layoutProduce"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/btnIntroduction"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:background="@drawable/ic_museum"
                    android:contentDescription="@string/app_name"
                    android:padding="8dp"
                    android:src="@drawable/button_round" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Giới thiệu Hồ Gươm"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- địa điểm tham quan  -->
            <LinearLayout
                android:id="@+id/layoutLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintStart_toEndOf="@id/layoutProduce"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/btnVisit"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:background="@drawable/ic_place"
                    android:contentDescription="@string/app_name"
                    android:padding="8dp"
                    android:src="@drawable/button_round" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Địa điểm tham quan"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- sự kiện  -->
            <LinearLayout
                android:id="@+id/layoutEvent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintStart_toStartOf="@id/layoutProduce"
                app:layout_constraintTop_toBottomOf="@id/layoutProduce">

                <ImageButton
                    android:id="@+id/btnEvent"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:background="@drawable/ic_calender"
                    android:contentDescription="@string/app_name"
                    android:padding="8dp"
                    android:src="@drawable/button_round" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Sự kiện"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- dịch vụ  -->
            <LinearLayout
                android:id="@+id/layoutService"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintStart_toEndOf="@id/layoutEvent"
                app:layout_constraintTop_toTopOf="@id/layoutEvent">

                <ImageButton
                    android:id="@+id/btnService"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:background="@drawable/ic_service"
                    android:contentDescription="@string/app_name"
                    android:padding="8dp"
                    android:src="@drawable/button_round" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Dịch vụ"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- ẩm thực và lưu trú  -->
            <LinearLayout
                android:id="@+id/layoutAccomodation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintStart_toStartOf="@id/layoutEvent"
                app:layout_constraintTop_toBottomOf="@id/layoutEvent">

                <ImageButton
                    android:id="@+id/btnCuisineAndAccommodation"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:contentDescription="@string/app_name"
                    android:padding="8dp"
                    android:background="@drawable/ic_accomodation"
                    android:src="@drawable/button_round" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Ẩm thực &amp; lưu trú"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- góp ý  -->
            <LinearLayout
                android:id="@+id/layoutFeedback"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintStart_toEndOf="@id/layoutAccomodation"
                app:layout_constraintTop_toTopOf="@id/layoutAccomodation">

                <ImageButton
                    android:id="@+id/btnComment"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:background="@drawable/ic_letter"
                    android:contentDescription="@string/app_name"
                    android:padding="8dp"
                    android:src="@drawable/button_round" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Góp ý"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

